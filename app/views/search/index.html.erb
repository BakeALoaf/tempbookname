<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>


<%= form_with url: search_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Where are you going?"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
